---
import type { CategoryCount } from "../stores/portalItems";
import { getCategoryLabel } from "../utility/utilityFunctions";

interface Props {
  dataCategories: CategoryCount[];
}

const { dataCategories } = Astro.props as Props;
---

<aside
  class="w-0 sm:w-64 h-full overflow-x-hidden transition-all -translate-x-full sm:translate-x-0 bg-gray-50 border-r border-gray-200"
>
  <div class="py-4 overflow-y-auto">
    <h3 class="flex items-center mb-5 px-5">
      <svg
        class="w-5 h-5 text-primary-550"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="currentColor"
        viewBox="0 0 18 18"
      >
        <path
          d="M6.143 0H1.857A1.857 1.857 0 0 0 0 1.857v4.286C0 7.169.831 8 1.857 8h4.286A1.857 1.857 0 0 0 8 6.143V1.857A1.857 1.857 0 0 0 6.143 0Zm10 0h-4.286A1.857 1.857 0 0 0 10 1.857v4.286C10 7.169 10.831 8 11.857 8h4.286A1.857 1.857 0 0 0 18 6.143V1.857A1.857 1.857 0 0 0 16.143 0Zm-10 10H1.857A1.857 1.857 0 0 0 0 11.857v4.286C0 17.169.831 18 1.857 18h4.286A1.857 1.857 0 0 0 8 16.143v-4.286A1.857 1.857 0 0 0 6.143 10Zm10 0h-4.286A1.857 1.857 0 0 0 10 11.857v4.286c0 1.026.831 1.857 1.857 1.857h4.286A1.857 1.857 0 0 0 18 16.143v-4.286A1.857 1.857 0 0 0 16.143 10Z"
        ></path>
      </svg>
      <span
        class="text-xl text-primary-700 font-semibold whitespace-nowrap ms-3"
      >
        Categories
      </span>
    </h3>
    <ul class="font-medium">
      {
        dataCategories.map((item) => (
          <li
            data-category={item.category}
            class="category flex items-center py-2 px-5 text-primary-700 hover:bg-primary-250"
          >
            <span class="flex-1">{getCategoryLabel(item.category)}</span>
            <span class="flex items-center text-primary-700 bg-white text-[0.9rem] font-semibold rounded-full px-3 py-1 border border-gray-100">
              <svg
                class="w-5 h-5 mr-2"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentcolor"
              >
                <>
                  <path d="M0 0h24v24H0z" fill="none" />
                  <path d="M11.99 18.54l-7.37-5.73L3 14.07l9 7 9-7-1.63-1.27-7.38 5.74zM12 16l7.36-5.73L21 9l-9-7-9 7 1.63 1.27L12 16z" />
                </>
              </svg>
              {item.counts}
            </span>
          </li>
        ))
      }
    </ul>
  </div>
</aside>

<script>
  import { setActiveCatogory } from "../stores/appState";
  const categoryElements = document.querySelectorAll(".category");
  const firstEl = categoryElements[0];
  firstEl.classList.remove("text-primary-700", "hover:bg-primary-250");
  firstEl.classList.add("bg-primary-600", "text-primary-100", "activeCategory");

  categoryElements.forEach((el) => {
    if (el instanceof HTMLElement) {
      el.addEventListener("click", async () => {
        const preActiveEl = document.querySelector(".activeCategory");

        preActiveEl?.classList.remove(
          "bg-primary-600",
          "text-primary-100",
          "activeCategory",
        );

        preActiveEl?.classList.add("text-primary-700", "hover:bg-primary-250");

        el.classList.remove("text-primary-700", "hover:bg-primary-250");
        el.classList.add(
          "bg-primary-600",
          "text-primary-100",
          "activeCategory",
        );
        if (el.dataset.category) setActiveCatogory(el.dataset.category);
      });
    }
  });
</script>
