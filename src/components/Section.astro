---
import Container from "./Container.astro";

const { dark } = Astro.props;
---

<section class={`${dark ? "bg-primary-100" : ""}`}>
  <Container>
    <div class="py-8 sm:py-12">
      <h2
        class="mb-1 text-2xl md:text-4xl tracking-tight text-center font-bold text-primary-600"
      >
        <slot name="header" />
      </h2>
      <p
        class="text-primary-500 max-w-[560px] text-center mx-auto text-base mb-6"
      >
        <slot name="subtext" />
      </p>
      <slot />
    </div>
  </Container>
</section>
